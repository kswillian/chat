<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="6dp"
        android:background="@drawable/gb_balao"
        android:backgroundTint="@color/balaoSender"
        android:orientation="vertical"
        android:layout_alignParentRight="true">

        <ImageView
            android:id="@+id/imageViewMensagemFoto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/default_img"
            tools:visibility="gone" />

        <TextView
            android:id="@+id/textViewMensagemText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="TextView"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/textViewMensagemData"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="TextView"
            android:textAlignment="textEnd"
            android:textSize="11sp"
            android:textStyle="bold|italic" />
    </LinearLayout>
</RelativeLayout>